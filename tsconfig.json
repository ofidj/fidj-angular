{
  "files": [
    "./src/index.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "specs",
    "coverage",
    ".coverage"
  ]
}
