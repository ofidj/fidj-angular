{
  "name": "fidj-angular",
  "version": "15.0.9",
  "author": "fidj",
  "description": "fidj angular tools",
  "keywords": [],
  "private": false,
  "license": "MIT",
  "main": "./index.js",
  "types": "./index.d.ts",
  "dependencies": {
    "fidj-node": "file:../fidj-node/dist"
  },
  "devDependencies": {
    "@angular/cli": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@types/chai": "^4.3.10",
    "@types/jasmine": "^3.10.18",
    "@types/jasmine-ajax": "^3.3.3",
    "@types/mocha": "^10.0.9",
    "@types/node": "^18.19.64",
    "chai": "^4.3.10",
    "jasmine-core": "^3.99.1",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-ajax": "^0.1.13",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.5.3",
    "mocha": "^10.2.0",
    "ng-packagr": "^15.2.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typedoc": "^0.26.11",
    "typescript": "4.9.5"
  },
  "scripts": {
    "_clean": "rm -rf .gen .logs .nyc_output .coverage dist node_modules",
    "build": "npm run build-version && npm run build-dist",
    "build-version": "VERSION=\"$(npm version patch --no-git-tag-version)\" && echo \"export const fidj={version:'$VERSION'}\" > ./src/module/fidj.ts",
    "build-dist": "rm -rf dist/ && tsc --project tsconfig.json && cp *.md dist/ && cp package.json dist/",
    "test": "mocha --require ts-node/register 'specs/**/**.spec.ts'",
    "coverage": "nyc npm run test",
    "build-angular": "ng-packagr -p ng-package.json",
    "build-docs": "typedoc --out ./docs ./src/index.ts"
  },
  "ignore": [
    "**/.*",
    "*.sh",
    "_todo",
    "src",
    "docs",
    "node_modules",
    "bower_components",
    "test",
    "gulpfile.js",
    "ng-package.json",
    "tsconfig.json",
    "tslint.json"
  ]
}
